@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Page title -->
<div id="pageTitle" class="content2-pagetitle">Administration</div>

<iframe id="pageIframe" style="width:95%;border:solid 0px; height:550px; margin-left:20px;" src=""></iframe>

@section left_body{
    
    <ul class="options">
        <li class="title">Security</li>
        <li class="group"><a id="optionUsers" href="#">Users</a></li>
        <li class="group"><a id="optionRoles" href="#">Roles</a></li>
        <li class="group"><a id="optionAccessRights" href="#">Access Rights</a></li>
    </ul>

    <ul class="options">
        <li class="title">Templates</li>
        <li class="group"><a id="optionPageTemplates" href="#">Page</a></li>
        <li class="group"><a href="#">Product</a></li>        
    </ul>

    <ul class="options">
        <li class="title">Master Data</li>
        <li class="group"><a id="optionCities" href="#">Cities</a></li>
        <li class="group"><a id="optionTaxonomies" href="#">Taxonomies</a></li>  
    </ul>

    <ul class="options">
        <li class="title">Import Data</li>        
        <li class="group"><a id="optionProductBulkImport" href="#">Products</a></li>        
    </ul>

}

@section scripts{

    <script>

        $(document).ready(function () {

            $("#optionPageTemplates").on("click", function () {
                $("#pageTitle").html("Page Templates");
                $("#pageIframe").attr("src", "/admin/managepagetype");
            });

            $("#optionTaxonomies").on("click", function () {
                $("#pageTitle").html("Taxonomies");
                $("#pageIframe").attr("src", "/admin/managetaxonomy");
            });

            $("#optionCities").on("click", function () {
                $("#pageTitle").html("Cities");
                $("#pageIframe").attr("src", "/admin/managecity");
            });

            $("#optionProductBulkImport").on("click", function () {
                $("#pageTitle").html("Products - Bulk Insert");
                $("#pageIframe").attr("src", "/admin/manageproduct/bulkinsert");
            });

            $("#optionUsers").on("click", function () {
                $("#pageTitle").html("Users");
                $("#pageIframe").attr("src", "/admin/manageuser");
            });

            $("#optionRoles").on("click", function () {
                $("#pageTitle").html("Roles");
                $("#pageIframe").attr("src", "/admin/managerole");
            });
        });

    </script>

}