@using Plenum.Models;

@model Plenum.Models.PlenumPageDataModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Page.Name;
    ViewBag.MetaKeywords = Model.Page.GetFieldValue("MetaKeywords");
